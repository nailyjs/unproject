{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "vue",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["src", "frontend"]
}
